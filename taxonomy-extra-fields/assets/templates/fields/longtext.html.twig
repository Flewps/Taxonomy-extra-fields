<tr class="form-field">  
	<th scope="row" valign="top">  
		<label for="{{ name }}">{{ label }}</label>
	</th>  
	<td>  
		<textarea name="{{ name }}" class="{{ class }}">{{ value }}</textarea>
		{% if foo not is empty %}
			<span class="description">{{ description }}</span>
		{% endif; %}
	</td>  
</tr>