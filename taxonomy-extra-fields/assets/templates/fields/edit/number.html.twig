<tr class="form-field">  
	<th scope="row" valign="top">  
		<label for="{{ name }}">{{ label }}</label>
	</th>  
	<td>  
		<input type="number" name="{{ name }}" class="{{ class }}" value="{{ value }}" />
		{% if description not is empty %}
			<p class="description">{{ description }}</p>
		{% endif; %}
	</td>  
</tr>